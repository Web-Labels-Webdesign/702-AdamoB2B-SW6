{% sw_extends '@Storefront/storefront/component/buy-widget/buy-widget.html.twig' %}

{% block buy_widget_rich_snippets %}
    <h1 class="product-detail-name" itemprop="name">
        {{ page.product.translated.name}}
    </h1>
    {% if product.productNumber %}
        <div class="mb-2">
            <strong >
                {{ "detail.productNumberLabel"|trans|sw_sanitize }}
            </strong>
            <meta itemprop="productID"
                    content="{{ product.id }}"/>
            <span class="product-detail-ordernumber"
                    itemprop="sku">
                {{ product.productNumber }}
            </span>
        </div>
    {% endif %}
    {% if product.sortedProperties|length > 0 %}
        {% for group in product.sortedProperties %}
            {% if group.customFields.custom_property_top_check %}
                <div class="mb-2">
                    <strong>{{ group.translated.name|e }}:</strong>
                    <span>
                        {% apply spaceless %}
                            {% for option in group.options %}
                                {% set i = ( i | default(0) ) + 1 %}
                                <span>{% if i > 1 %}, {% endif %}
                                    {% if group.customFields.custom_property_top_pflege %}
                                        <img class="care-symbol" src="/pflegesymbole/{{ option.translated.name|e }}">
                                    {% else %}
                                        {{ option.translated.name|e }}
                                    {% endif %}
                                </span>
                            {% endfor %}
                        {% endapply %}
                    </span>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
    {% if context.currentCustomerGroup.customFields.custom_customer_buy_true %}
        {{ parent() }}
    {% endif %}
{% endblock %}

